{
  "name": "root",
  "version": "2.0.0",
  "private": true,
  "engines": {
    "node": "16 || 18"
  },
  "scripts": {
    "preinstall": "npx only-allow yarn",
    "start": "turbo run start",
    "start:backstage": "turbo run start --filter=...{./packages/*}",
    "start:plugins": "turbo run start --filter=...{./plugins/*}",
    "build": "turbo run build",
    "build:backstage": "turbo run build --filter=...{./packages/*}",
    "build:plugins": "turbo run build --filter=...{./plugins/*}",
    "tsc": "tsc",
    "clean": "turbo run clean",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "prettier:check": "prettier --check .",
    "prettier:fix": "prettier --write .",
    "new": "backstage-cli new --scope @janus-idp",
    "release": "auto shipit",
    "prepare": "husky install"
  },
  "workspaces": {
    "packages": [
      "packages/*",
      "plugins/*"
    ]
  },
  "devDependencies": {
    "@auto-it/all-contributors": "^10.46.0",
    "@auto-it/conventional-commits": "^10.46.0",
    "@auto-it/first-time-contributor": "^10.46.0",
    "@auto-it/protected-branch": "^10.46.0",
    "@backstage/cli": "0.22.7",
    "@ianvs/prettier-plugin-sort-imports": "4.0.1",
    "@spotify/prettier-config": "15.0.0",
    "auto": "10.46.0",
    "conventional-changelog-conventionalcommits": "6.1.0",
    "husky": "8.0.3",
    "prettier": "2.8.8",
    "turbo": "1.10.0",
    "typescript": "5.0.4"
  },
  "resolutions": {
    "@types/react": "^17.0.2",
    "@types/react-dom": "^17.0.2"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,mjs,cjs}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "repository": "janus-idp/backstage-plugins",
  "author": "janus-idp[bot] <139477802+janus-idp[bot]@users.noreply.github.com>",
  "auto": {
    "plugins": [
      [
        "protected-branch",
        {
          "releaseTemporaryBranchPrefix": "release-",
          "requiredStatusChecks": [
            "check-1",
            "check-2"
          ]
        }
      ],
      "npm",
      "all-contributors",
      "conventional-commits",
      "first-time-contributor"
    ]
  }
}
